extends ../layout

block content
  .row
    .col-md-8.mx-auto
      h1 Edit Project
      
      form(method="POST", action=`/projects/edit/${project._id}`)
        .mb-3
          label.form-label(for="title") Project Title *
          input.form-control(type="text", name="title", id="title", value=project.title, required)
        
        .mb-3
          label.form-label(for="description") Description *
          textarea.form-control(name="description", id="description", rows="4", required)= project.description
        
        .mb-3
          label.form-label(for="technologies") Technologies *
          input.form-control(type="text", name="technologies", id="technologies", value=project.technologies.join(', '), required)
          .form-text Enter technologies separated by commas
        
        .mb-3
          label.form-label(for="githubUrl") GitHub URL
          input.form-control(type="url", name="githubUrl", id="githubUrl", value=project.githubUrl)
        
        .mb-3
          label.form-label(for="liveUrl") Live Demo URL
          input.form-control(type="url", name="liveUrl", id="liveUrl", value=project.liveUrl)
        
        .mb-3
          label.form-label(for="image") Project Image URL
          input.form-control(type="url", name="image", id="image", value=project.image)
        
        .mb-3.form-check
          input.form-check-input(type="checkbox", name="featured", id="featured", checked=project.featured)
          label.form-check-label(for="featured") Featured Project
        
        .d-flex.gap-2
          button.btn.btn-warning(type="submit") Update Project
          a.btn.btn-secondary(href="/projects") Cancel