doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title + " - Portfolio Admin"
    link(rel="stylesheet", href="/css/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href="/") Portfolio Admin
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/") Dashboard
            li.nav-item
              a.nav-link(href="/projects") Projects
            li.nav-item
              a.nav-link(href="/skills") Skills
            li.nav-item
              a.nav-link(href="/api/projects", target="_blank") API - Projects
            li.nav-item
              a.nav-link(href="/api/skills", target="_blank") API - Skills
    
    main.container.mt-4
      block content
    
    footer.bg-light.text-center.py-3.mt-5
      p &copy; 2025 Portfolio Admin Dashboard
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    script(src="/js/main.js")